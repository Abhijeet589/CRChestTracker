<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/cr_background"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/get_tag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/tag_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter your clash royale tag"
            android:textColor="@color/colorAccent" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorAccent"
                android:text="#"/>
        <EditText
            android:id="@+id/enter_tag_et"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/colorAccent"
            android:minWidth="50dp"
            android:textColor="@color/colorAccent" />
        </LinearLayout>

        <Button
            android:id="@+id/submit_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorAccent"
            android:text="Submit"
            android:textColor="@color/colorPrimaryDark" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/contact_us"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="0dp"
        android:layout_weight="0.5">
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        android:background="@color/colorAccent"
        android:text="Contact us"
        android:textColor="@color/colorPrimaryDark"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/loading"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:visibility="gone">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Fetching chests..."
            android:textColor="@color/colorAccent" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">
    <LinearLayout
        android:id="@+id/chests_screen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/test"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Your upcoming chests"
                android:textColor="@color/colorAccent"
                android:textSize="15dp"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/settings"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/settings"
                android:tint="@color/colorAccent" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/first_img"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:adjustViewBounds="true" />

                <TextView
                    android:id="@+id/first_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/first_img"
                    android:layout_centerHorizontal="true"
                    android:text="loading"
                    android:textColor="@color/colorAccent" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/second_img"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:adjustViewBounds="true" />

                <TextView
                    android:id="@+id/second_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/second_img"
                    android:layout_centerHorizontal="true"
                    android:text="loading"
                    android:textColor="@color/colorAccent" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/third_img"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:adjustViewBounds="true" />

                <TextView
                    android:id="@+id/third_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/third_img"
                    android:layout_centerHorizontal="true"
                    android:text="loading"
                    android:textColor="@color/colorAccent" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/fourth_img"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:adjustViewBounds="true" />

                <TextView
                    android:id="@+id/fourth_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/fourth_img"
                    android:layout_centerHorizontal="true"
                    android:text="loading"
                    android:textColor="@color/colorAccent" />

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/fifth_img"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:adjustViewBounds="true" />

                <TextView
                    android:id="@+id/fifth_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/fifth_img"
                    android:layout_centerHorizontal="true"
                    android:text="loading"
                    android:textColor="@color/colorAccent" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/sixth_img"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:adjustViewBounds="true" />

                <TextView
                    android:id="@+id/sixth_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/sixth_img"
                    android:layout_centerHorizontal="true"
                    android:text="loading"
                    android:textColor="@color/colorAccent" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/seventh_img"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:adjustViewBounds="true" />

                <TextView
                    android:id="@+id/seventh_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/seventh_img"
                    android:layout_centerHorizontal="true"
                    android:text="loading"
                    android:textColor="@color/colorAccent" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/eighth_img"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:adjustViewBounds="true" />

                <TextView
                    android:id="@+id/eighth_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/eighth_img"
                    android:layout_centerHorizontal="true"
                    android:text="loading"
                    android:textColor="@color/colorAccent" />

            </RelativeLayout>

        </LinearLayout>

        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Special chests"
            android:textSize="15sp"
            android:textColor="@color/colorAccent"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"/>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/giant_img"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:adjustViewBounds="true" />

                <TextView
                    android:id="@+id/giant_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/giant_img"
                    android:layout_centerHorizontal="true"
                    android:text="loading"
                    android:textColor="@color/colorAccent" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/magical_img"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:adjustViewBounds="true" />

                <TextView
                    android:id="@+id/magical_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/magical_img"
                    android:layout_centerHorizontal="true"
                    android:text="loading"
                    android:textColor="@color/colorAccent" />

            </RelativeLayout>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/epic_img"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:adjustViewBounds="true" />

                <TextView
                    android:id="@+id/epic_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/epic_img"
                    android:layout_centerHorizontal="true"
                    android:text="loading"
                    android:textColor="@color/colorAccent" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/legendary_img"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:adjustViewBounds="true" />

                <TextView
                    android:id="@+id/legendary_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/legendary_img"
                    android:layout_centerHorizontal="true"
                    android:text="loading"
                    android:textColor="@color/colorAccent" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/super_magical_img"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:adjustViewBounds="true" />

                <TextView
                    android:id="@+id/super_magical_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/super_magical_img"
                    android:layout_centerHorizontal="true"
                    android:text="loading"
                    android:textColor="@color/colorAccent" />

            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/check_others"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@color/colorAccent"
        android:text="Check other player's chests"
        android:textColor="@color/colorPrimaryDark" />

    <com.google.android.gms.ads.AdView
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/adView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        ads:adSize="SMART_BANNER"
        ads:adUnitId="ca-app-pub-6229326724546843/5794260466">
    </com.google.android.gms.ads.AdView>

</LinearLayout>